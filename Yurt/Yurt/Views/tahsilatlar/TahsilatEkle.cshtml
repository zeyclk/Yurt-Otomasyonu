@model Yurt.Models.tahsilatlar

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>TahsilatEkle</title>
    <link href="~/Css/stil.css" rel="stylesheet" />
</head>
<body>
    @using (Html.BeginForm()) 
    {
        @Html.AntiForgeryToken()
        
        <div class="form-horizontal">
            
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.Label("TC/Pasaport No")
                <div class="col-md-10">
                    @Html.DropDownList("tah_ogrID", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.tah_ogrID, "", new { @class = "text-danger" })
                </div>
            </div>
    
            <div class="form-group">
               @Html.Label("Tutar")
                <div class="col-md-10">
                    @Html.EditorFor(model => model.tah_tutar, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.tah_tutar, "", new { @class = "text-danger" })
                </div>
            </div>
    
            <div class="form-group">
                @Html.Label("Son Ödeme Tarihi")
                <div class="col-md-10">
                    @Html.EditorFor(model => model.tah_sontarih, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.tah_sontarih, "", new { @class = "text-danger" })
                </div>
            </div>
    
            <div class="form-group">
               @Html.Label("Ödeme Durumu")
                <div class="col-md-10">
                    @Html.EditorFor(model => model.tah_durum, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.tah_durum, "", new { @class = "text-danger" })
                </div>
            </div>
    
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
    
    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</body>
</html>
