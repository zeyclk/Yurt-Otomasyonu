@model Yurt.Models.odalar

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>OdaSil</title>
    <link href="~/Css/stil.css" rel="stylesheet" />
</head>
<body>
    <h3>Bunu silmek istediğinize emin misiniz?</h3>
    <div>
        
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayName("Oda No")
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.oda_no)
            </dd>
    
        </dl>
    
