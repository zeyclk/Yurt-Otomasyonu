@model IEnumerable<Yurt.Models.odalar>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>OdaArama</title>
    <link href="~/Css/stil.css" rel="stylesheet" />
</head>
<body>
    <div> 
        @{Html.BeginForm();}
        @Html.Label("aramaalani", "Oda Numarası Giriniz")
        
        @Html.TextBox("aranan", "", new { @placeholder = "Aranacak değeri giriniz." })
        <input type="submit" value="Ara" />
        @{Html.EndForm();}
    </div>

    <table class="table1">
        <tr>
            <th>ID</th>
            <th>Oda No</th>
        </tr>

        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="6">Böyle bir kayıt yok.</td>
            </tr>
        }

        else
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.oda_id</td>
                    <td>@item.oda_no</td>
                </tr>
            }
        }
    </table>
</body>
</html>
